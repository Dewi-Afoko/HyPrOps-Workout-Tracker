commands:
  00-create-staging-dir:
    command: "mkdir -p /var/app/staging/ && chmod -R 777 /var/app/staging/"
  01-copy-app-files:
    command: "cp -r /var/app/current/* /var/app/staging/"
  02-create-venv:
    command: "/usr/bin/python3.12 -m venv /var/app/staging/venv"
  03-activate-venv:
    command: "source /var/app/staging/venv/bin/activate"
  04-upgrade-pip:
    command: "/var/app/staging/venv/bin/pip install --upgrade pip"
  05-install-requirements:
    command: "/var/app/staging/venv/bin/pip install -r /var/app/staging/requirements.txt || /var/app/staging/venv/bin/pip install -r /var/app/current/requirements.txt"
